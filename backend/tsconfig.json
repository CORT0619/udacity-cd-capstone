{
  "compilerOptions": {
    "lib": [
      "es2017"
    ],
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "target": "es2017",
    "outDir": "lib"
  },
  "exclude": [
    "node_modules",
    "src/__tests__/*.ts"
  ],
  "types": ["jest", "node"],
  "typeRoots": [
    "./node_modules/@types"
  ]
}
